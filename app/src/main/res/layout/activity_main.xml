<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#006064"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome User ! \nYour Current Location:"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#FFF"
        android:id="@+id/latitudeTV"
        tools:layout_editor_absoluteY="85dp"
        tools:layout_editor_absoluteX="80dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_marginTop="11dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/googlemaps"
        android:maxWidth="256dp"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/latitudeTV"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#12927c"
        android:textColor="#FFF"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="FIND NEARBY RESTAURANTS"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/latitudeTV"
        android:layout_alignEnd="@+id/latitudeTV"
        android:layout_marginBottom="31dp" />

    <TextView
        android:id="@+id/addressTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFC400"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:text="@string/gps_notification"
        android:gravity="center"
        android:textStyle="bold"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

</RelativeLayout>
</ScrollView>